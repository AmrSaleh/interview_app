<div class="page-header">
	
	<h1>Listing Users</h1>
</div>

<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				
				<th>User_email</th>
				<th>Admin</th>
				<th>Make admin</th>
				<th>Remove admin</th>
				
			</tr>
		</thead>

		<tbody>
			<%= content_tag_for(:tr, User.all) do |user| %>
			<% puts  user.to_json%>
				
					
					<td><%= user.email %></td>
					<td><%= user.admin %></td>
					<td><%= button_to "Make Admin", "/home/make_user_admin/#{user.id}/t" %></td>
					<td><%= button_to "Remove Admin", "/home/make_user_admin/#{user.id}/f"%></td>
					
				
			<% end %>
		</tbody>
	</table>
</div>
