		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :name, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :name, class: "form-control" %>
	</div>
</div>


<div class="form-group">
	<%= f.label :Upload_Avatar, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">

		<%= f.file_field :avatar %>

	</div>
</div>

<%= fields_for @resume  do |u|  %>

<% if !u.nil?%>

<div class="form-group">
	<%= u.label :name, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">

		<%= u.text_field :name , class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<%= u.label :attachment, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= u.file_field :attachment %>
	</div>
</div>
<% end %>

<% end %>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit class: "btn btn-primary" %>
	</div>
</div>

<% end %>

