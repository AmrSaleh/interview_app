<div class="page-header">
	<%= link_to interviewees_path, class: 'btn btn-default' do %>
	<span class="glyphicon glyphicon-list-alt"></span>
	Back
	<% end %>
	<%= link_to edit_interviewee_path(@interviewee), class: 'btn btn-primary' do %>
	<span class="glyphicon glyphicon-pencil"></span>
	Edit
	<% end %>
	<h1>Show interviewee</h1>

</div>
<%= image_tag @interviewee.avatar.url %>
<%= image_tag @interviewee.avatar.url(:medium) %>
<%= image_tag @interviewee.avatar.url(:thumb) %>

<dl class="dl-horizontal">
	<dt>
		Name:
	</dt>
	<dd>
		<%= @interviewee.name %>
	</dd>

	<dt>
		Cv:
	</dt>
	<dd>
		<% if !@interviewee.user.nil? %>
				<%= @interviewee.user.email %>
				<% else %>
				<%= "no email (just testing)" %>
				<% end%>
	</dd>

</dl>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Download Link</th>
			<th>Interviewee_id</th>

		</tr>
	</thead>
	<tbody>
		<% @interviewee.resumes.each do |resume| %>
		<tr>
			<td><%= resume.name %></td>
			<td><%= link_to "Download Resume", resume.attachment_url %></td>
			<td><%= resume.interviewee.id %></td>

		</tr>
		<% end %>
	</tbody>
</table>